{
  "name": "@ai-cms/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/app.ts"
    }
  },
  "scripts": {
    "build": "prisma generate && bun build src/index.ts --outdir dist --target bun --minify",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@clerk/backend": "^2.27.0",
    "@hono/clerk-auth": "^3.0.3",
    "@hono/zod-validator": "^0.4.2",
    "@mastra/core": "^0.10.1",
    "@prisma/client": "^6.1.0",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "prisma": "^6.1.0",
    "typescript": "^5.7.2"
  }
}
