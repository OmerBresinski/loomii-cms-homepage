    "@ai-cms/ai": "workspace:*",
    "@hono/zod-validator": "^0.4.2",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  }
}
