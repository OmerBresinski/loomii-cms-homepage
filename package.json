{
  "name": "ai-cms",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --cwd apps/api dev",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:home": "bun run --cwd apps/homepage dev",
    "build": "bun run --cwd apps/api build && bun run --cwd apps/web build && bun run --cwd apps/homepage build",
    "build:api": "bun run --cwd apps/api build",
    "build:web": "bun run --cwd apps/web build",
    "build:home": "bun run --cwd apps/homepage build",
    "test": "bun run --cwd apps/api test",
    "db:push": "bun run --cwd apps/api db:push",
    "db:migrate": "bun run --cwd apps/api db:migrate",
    "db:studio": "bun run --cwd apps/api db:studio"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0"
  }
}